
<h1>ToDo list</h1>
<br>
<table class="table table-striped table-borded table-hover">
  <thead class="thead-dark", bgcolor="4963F1">
    <tr>
      <th>data:</th>
      <th>nazwa:</th>
      <th>ważność:</th>
      <th>postęp:</th>
      <th></th>
    </tr>
  </thead>
  <tbody bgcolor="9BA7E7">
    <% @todos.each do |todo| %>
      <tr>
        <td width="100"><%=Date.parse(todo.termin).strftime("%e %B, %Y")%></td>
        <td width="360"><%=todo.nazwa %></td>
        <td width="100"><%=todo.waznosc %></td>
        <td width="60"><%=todo.stopien_postepu %></td>
        <td width ="140"> <%= link_to "Show", todo , class:"btn btn-success"%></td>

        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>">
            <%= value %>
          </div>
        <% end %>
        
         
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New task", new_todo_path, class: "btn btn-primary" %>
